{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "cities": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "places": {
                            "type": "array",
                            "items": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        },
                                        "category": {
                                            "type": "string"
                                        },
                                        "address": {
                                            "type": "string"
                                        },
                                        "image": {
                                            "type": "string"
                                        },
                                        "phoneNumber": {
                                            "type": "string"
                                        },
                                        "description": {
                                            "type": "string"
                                        },
                                        "hours": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "name",
                                        "category",
                                        "address",
                                        "description"
                                    ]
                                }
                            ]
                        }
                    },
                    "required": [
                        "name",
                        "places"
                    ]
                }
            ]
        }
    },
    "required": [
        "cities"
    ]
}